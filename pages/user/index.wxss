.container {
  height: 100%;
  background-color: #f1eded;
}
.container .userinfo {
  height: 350rpx;
  width: 100%;
  background-color: #ffffff;
  position: relative;
}
.container .userinfo button {
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  color: red;
  border: 1px solid red;
  background-color: white;
}
.container .userinfo .profile {
  height: 350rpx;
  filter: blur(10rpx);
}
.container .userinfo .userinfo-avatar {
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 50%;
  height: 170rpx;
  width: 170rpx;
}
.container .userinfo .userinfo-nickname {
  color: white;
  position: absolute;
  top: 250rpx;
  left: 50%;
  transform: translateX(-50%);
}
.container .user-order {
  height: 150rpx;
  margin: 20rpx 5rpx;
  background-color: white;
  display: flex;
  align-items: center;
}
.container .user-order .item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .user-order .item .iconfont.icon-icon-test {
  font-size: 60rpx;
}
.container .user-order .item .text {
  font-size: 30rpx;
  color: #6d6d6d;
}
.container .user-sysFunc {
  height: 100%;
  background: #ffffff;
  margin: 0 5rpx;
}
.container .user-sysFunc .sysFunc-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  height: 100rpx;
  border-bottom: 2px solid #ddd;
  margin: 0rpx 10rpx;
}
.container .user-sysFunc .sysFunc-item .left {
  display: flex;
  align-items: center;
}
.container .user-sysFunc .sysFunc-item .left .iconfont {
  font-size: 50rpx;
  margin: 0 20rpx;
  color: #6d6d6d;
}
.container .user-sysFunc .sysFunc-item .left .text {
  font-size: 30rpx;
  color: #6d6d6d;
}
.container .user-sysFunc .sysFunc-item .right {
  color: #6d6d6d;
}
